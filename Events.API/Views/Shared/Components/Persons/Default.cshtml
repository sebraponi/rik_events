@model Events.Domain.Person

@{
    ViewData["Title"] = "Create";
}



<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="FirstName" class="control-label"></label>
            <div class="col-sm-8">
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="LastName" class="control-label"></label>
            <div class="col-sm-8">
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="PersonalCode" class="control-label"></label>
            <div class="col-sm-8">
                <input asp-for="PersonalCode" class="form-control" />
                <span asp-validation-for="PersonalCode" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="PaymentType" class="control-label"></label>
            <div class="col-sm-8">
                <select asp-for="PaymentType" class="form-control">
                    <option value="Pangaülekandega">Pangaülekandega</option>
                    <option value="Kohapeal">Kohapeal</option>
                </select>
                <span asp-validation-for="PaymentType" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="Description" class="control-label"></label>
            <div class="col-sm-8">
                <textarea rows="2" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <input asp-for="EventID" type="hidden" class="form-control" value="@ViewBag.Id" />
    </div>
    <div class="form-group py-3">
        <input asp-controller="Persons" asp-action="Create" type="submit" value="Salvesta" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
