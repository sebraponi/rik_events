@model Events.Domain.Company
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="Name" class="control-label"></label>
            <div class="col-sm-8">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="RegistryCode" class="control-label"></label>
            <div class="col-sm-8">
                <input asp-for="RegistryCode" class="form-control" />
                <span asp-validation-for="RegistryCode" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <div class="row">
            <label asp-for="Description" class="control-label"></label>
            <div class="col-sm-8">
                <textarea rows="2" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="form-group py-1">
        <input asp-for="EventID" type="hidden" class="form-control" value="@ViewBag.Id" />
    </div>
    <div class="form-group pt-3">
        <input asp-controller="Companies" asp-action="Create" type="submit" value="Salvesta" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
